<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/post_reply_profile_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/profile_round_bg"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/post_reply_nickname_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@id/post_reply_profile_iv"
        app:layout_constraintTop_toTopOf="@id/post_reply_profile_iv"
        app:layout_constraintEnd_toStartOf="@id/post_reply_more_iv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/post_reply_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_list"
        android:padding="7dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@id/post_reply_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/post_reply_comment_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text=""
        android:textColor="@color/content"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/post_reply_more_iv"
        app:layout_constraintStart_toStartOf="@id/post_reply_nickname_tv"
        app:layout_constraintTop_toBottomOf="@+id/post_reply_nickname_tv" />

    <TextView
        android:id="@+id/post_reply_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/post_reply_comment_tv"
        app:layout_constraintStart_toStartOf="@id/post_reply_nickname_tv"/>

    <View
        android:id="@+id/post_reply_line"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/tablayout_gray"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/post_reply_time_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>