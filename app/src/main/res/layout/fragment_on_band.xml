<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onband_iv"
        android:layout_width="227dp"
        android:layout_height="281dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onband_band_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="밴드 결성"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/onband_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/onband_easy_tv"/>

    <TextView
        android:id="@+id/onband_easy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="을 쉽고 간편하게"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/onband_band_tv"
        app:layout_constraintStart_toEndOf="@id/onband_band_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onband_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모집 중인 밴드에 가입하거나\n직접 밴드를 결성해 세션들을 모집할 수 있어요"
        android:textColor="@color/light_gray"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/onband_band_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>