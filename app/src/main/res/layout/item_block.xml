<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/block_profile_iv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/profile_round_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/block_nickname_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15.5sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/block_profile_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/block_decision_tv" />

    <com.google.android.material.chip.Chip
        android:id="@+id/block_decision_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:text="@string/cancel_block"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard_medium"
        android:clickable="false"
        app:chipMinTouchTargetSize="0dp"
        app:chipBackgroundColor="@color/background_gray"
        app:rippleColor="@color/transparent"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>