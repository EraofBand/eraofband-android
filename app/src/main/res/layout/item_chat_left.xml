<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/left_chat_profile_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_captain"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/left_chat_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/left_chat_profile_iv"
        app:layout_constraintStart_toEndOf="@id/left_chat_profile_iv"/>


    <TextView
        android:id="@+id/left_chat_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="블라블라"
        android:background="@drawable/left_bubble"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/left_chat_name_tv"
        app:layout_constraintStart_toStartOf="@id/left_chat_name_tv"/>

    <TextView
        android:id="@+id/left_chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:13"
        android:textColor="@color/indicator_dark"
        android:textSize="10sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/left_chat_content_tv"
        app:layout_constraintBottom_toBottomOf="@id/left_chat_content_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>