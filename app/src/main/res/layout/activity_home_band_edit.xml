<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_band_edit_actionbar_cl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/home_band_edit_back_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/home_band_edit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="밴드 수정"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_band_edit_nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_band_edit_actionbar_cl"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp">

            <TextView
                android:id="@+id/home_band_edit_notification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밴드의 정보를 수정해주세요"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_band_edit_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밴드 이름"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_notification_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_edit_name_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="타이틀"
                android:textColorHint="@color/content"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_name_tv"/>

            <TextView
                android:id="@+id/home_band_edit_name_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="00 / 20"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_band_edit_name_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_band_edit_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한 줄 소개"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_name_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_edit_info_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="밴드 한 줄 소개를 작성해주세요."
                android:textColorHint="@color/content"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_info_tv"/>

            <TextView
                android:id="@+id/home_band_edit_info_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="00 / 20"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_band_edit_info_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_band_edit_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 지역"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_info_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/home_band_edit_city_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_location_tv"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/home_band_edit_area_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginStart="23dp"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_city_sp"
                app:layout_constraintStart_toEndOf="@id/home_band_edit_city_sp"/>

            <TextView
                android:id="@+id/home_band_edit_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대표 사진"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_area_sp"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/home_band_edit_img_v"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/gray_round_bg"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_img_tv"/>

            <ImageView
                android:id="@+id/home_band_edit_img_iv"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_add_picture"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_img_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_band_edit_add_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 추가하기"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/blue"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_img_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_band_edit_add_info_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밴드를 대표하는 사진 한장을 추가해 주세요."
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_add_img_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_band_edit_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밴드 소개"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_img_v"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_edit_detail_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/gray_round_bg"
                android:hint="밴드를 소개해주세요!"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:gravity="top"
                android:maxLength="1000"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_detail_tv"/>

            <TextView
                android:id="@+id/home_band_edit_detail_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="00 / 500"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_band_edit_detail_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_band_edit_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅방 링크"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_detail_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_edit_chat_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="채팅방 링크를 등록해주세요"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_chat_tv"/>


            <TextView
                android:id="@+id/home_band_edit_session_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세션 모집 인원을 정해주세요"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_chat_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_band_edit_except_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자신의 세션 제외"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="12sp"
                android:textColor="#BBBBBB"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_session_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_band_edit_vocal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보컬"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_except_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_edit_vocal_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="희망하는 세션의 특징을 간단하게 적어주세요요"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_vocal_tv"/>

            <View
                android:id="@+id/home_band_edit_vocal_cnt_v"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gray_round_bg"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_vocal_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_band_edit_vocal_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_band_edit_vocal_cl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_vocal_cnt_v"
                app:layout_constraintStart_toStartOf="@id/home_band_edit_vocal_cnt_v"
                app:layout_constraintEnd_toEndOf="@id/home_band_edit_vocal_cnt_v"
                app:layout_constraintBottom_toBottomOf="@id/home_band_edit_vocal_cnt_v">


                <ImageButton
                    android:id="@+id/edit_vocal_minus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_minus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/edit_vocal_cnt_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/edit_vocal_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_vocal_minus_ib"
                    app:layout_constraintEnd_toStartOf="@id/edit_vocal_plus_ib"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/edit_vocal_plus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_vocal_cnt_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_band_edit_guitar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_vocal_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_edit_guitar_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="희망하는 세션의 특징을 간단하게 적어주세요요"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_guitar_tv"/>

            <View
                android:id="@+id/home_band_edit_guitar_cnt_v"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gray_round_bg"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_guitar_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_band_edit_guitar_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_band_edit_guitar_cl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_guitar_cnt_v"
                app:layout_constraintStart_toStartOf="@id/home_band_edit_guitar_cnt_v"
                app:layout_constraintEnd_toEndOf="@id/home_band_edit_guitar_cnt_v"
                app:layout_constraintBottom_toBottomOf="@id/home_band_edit_guitar_cnt_v">


                <ImageButton
                    android:id="@+id/edit_guitar_minus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_minus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/edit_guitar_cnt_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/edit_guitar_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_guitar_minus_ib"
                    app:layout_constraintEnd_toStartOf="@id/edit_guitar_plus_ib"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/edit_guitar_plus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_guitar_cnt_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_band_edit_base_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베이스"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_guitar_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_edit_base_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="희망하는 세션의 특징을 간단하게 적어주세요요"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_edit_base_tv"/>

            <View
                android:id="@+id/home_band_edit_base_cnt_v"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gray_round_bg"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_base_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_band_edit_base_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_band_edit_base_cl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/home_band_edit_base_cnt_v"
                app:layout_constraintStart_toStartOf="@id/home_band_edit_base_cnt_v"
                app:layout_constraintEnd_toEndOf="@id/home_band_edit_base_cnt_v"
                app:layout_constraintBottom_toBottomOf="@id/home_band_edit_base_cnt_v">


                <ImageButton
                    android:id="@+id/edit_base_minus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_minus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/edit_base_cnt_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/edit_base_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_base_minus_ib"
                    app:layout_constraintEnd_toStartOf="@id/edit_base_plus_ib"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/edit_base_plus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_base_cnt_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_band_edit_keyboard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키보드"
                android:textColor="@color/white"
