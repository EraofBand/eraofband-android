<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/gray_round_bg"
    android:backgroundTint="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/session_apply_ic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_apply"
        android:background="@drawable/ic_signup_progress"
        android:backgroundTint="@color/blue"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/session_apply_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세션 지원"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/session_apply_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/session_apply_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="밴드에 지원하시겠습니까?"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/session_apply_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/session_apply_cancel_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="취소하기"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:background="@drawable/gray_round_bg"
        android:paddingVertical="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/session_apply_content_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/session_apply_accept_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/session_apply_accept_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/volunteer"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/gray_round_bg"
        android:backgroundTint="@color/blue"
        android:paddingVertical="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/session_apply_content_tv"
        app:layout_constraintStart_toEndOf="@id/session_apply_cancel_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>