<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mypage_setting_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_setting"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mypage_back_iv"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_back"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/mypage_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="@string/mypage"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/mypage_back_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_back_iv"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mypage_profile_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_captain"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_back_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mypage_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승희는 해리야"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="@id/mypage_profile_iv"
        app:layout_constraintStart_toEndOf="@id/mypage_profile_iv"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mypage_profile_edit_iv"
        android:layout_width="11dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_more"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/mypage_nickname_tv"
        app:layout_constraintBottom_toBottomOf="@id/mypage_nickname_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mypage_area_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성남시 | 25세"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_nickname_tv"
        app:layout_constraintStart_toStartOf="@id/mypage_nickname_tv"/>

    <TextView
        android:id="@+id/mypage_instrument_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drum"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        android:background="@drawable/blue_circle_bg"
        android:paddingVertical="2dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/mypage_nickname_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_area_tv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/medium_gray_round_bg"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_profile_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/mypage_following_ly"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/mypage_follower_ly"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/mypage_following_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/following"
                android:textColor="@color/gray"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/mypage_following_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="50dp"
            android:background="#383838"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mypage_following_ly"
            app:layout_constraintEnd_toStartOf="@id/mypage_follower_ly"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/mypage_follower_ly"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mypage_following_ly"
            app:layout_constraintEnd_toStartOf="@id/mypage_like_ly"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/mypage_follower_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/follower"
                android:textColor="@color/gray"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/mypage_follower_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="154"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="50dp"
            android:background="#383838"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mypage_follower_ly"
            app:layout_constraintEnd_toStartOf="@id/mypage_like_ly"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/mypage_like_ly"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mypage_follower_ly"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/mypage_like_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/like"
                android:textColor="@color/gray"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/mypage_like_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.5k"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="#F43636"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/resign" />

    <TextView
        android:id="@+id/resign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textColor="#989898"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>