<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypage_actionbar_cl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mypage_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/mypage"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mypage_setting_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mypage_setting"
            app:layout_constraintBottom_toBottomOf="@+id/mypage_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mypage_title_tv" />

        <ImageView
            android:id="@+id/mypage_profile_edit_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_mypage_edit"
            app:layout_constraintBottom_toBottomOf="@+id/mypage_title_tv"
            app:layout_constraintEnd_toStartOf="@+id/mypage_setting_iv"
            app:layout_constraintTop_toTopOf="@+id/mypage_title_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.amar.library.ui.StickyScrollView
        android:id="@+id/mypage_ssv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_actionbar_cl"
        app:stickyHeader="@id/mypage_tb">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mypage_info_cl"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:background="@drawable/medium_gray_round_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/mypage_profileimg_iv"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:elevation="10dp"
                    android:src="@drawable/ic_captain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mypage_nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="승희는해리야"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    app:layout_constraintStart_toEndOf="@+id/mypage_profileimg_iv"
                    app:layout_constraintTop_toTopOf="@+id/mypage_profileimg_iv" />

                <TextView
                    android:id="@+id/mypage_detail_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="성남시 | 25세 | 남성"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/mypage_nickname_tv"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_nickname_tv" />

                <TextView
                    android:id="@+id/mypage_introduction_tv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_light"
                    android:maxLines="3"
                    android:text="테스트를 해보자테스트를 해보자테스트를 해보자테스트를 해보자테스트를 해보자테스트를 해보자테스트를 해보자"
                    android:textColor="#E2E2E2"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/mypage_nickname_tv"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_detail_info_tv" />

                <TextView
                    android:id="@+id/mypage_look_more_tv"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:text="더보기"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/mypage_introduction_tv"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_introduction_tv" />

                <TextView
                    android:id="@+id/mypage_following_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="팔로잉"
                    android:textColor="@color/bottom_nav_icon"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/mypage_following_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="0"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/mypage_following_tv"
                    app:layout_constraintStart_toStartOf="@+id/mypage_following_tv"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_following_tv" />

                <ImageView
                    android:id="@+id/mypage_line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_mypage_line"
                    app:layout_constraintBottom_toBottomOf="@+id/mypage_following_cnt_tv"
                    app:layout_constraintEnd_toStartOf="@+id/mypage_follower_tv"
                    app:layout_constraintStart_toEndOf="@+id/mypage_following_tv"
                    app:layout_constraintTop_toTopOf="@+id/mypage_following_tv" />

                <TextView
                    android:id="@+id/mypage_follower_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="팔로워"
                    android:textColor="@color/bottom_nav_icon"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/mypage_follower_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="0"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/mypage_follower_tv"
                    app:layout_constraintStart_toStartOf="@+id/mypage_follower_tv"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_follower_tv" />

                <ImageView
                    android:id="@+id/mypage_line_2_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_mypage_line"
                    app:layout_constraintBottom_toBottomOf="@+id/mypage_portfolio_cnt_tv"
                    app:layout_constraintEnd_toStartOf="@+id/mypage_portfolio_tv"
                    app:layout_constraintStart_toEndOf="@+id/mypage_follower_tv"
                    app:layout_constraintTop_toTopOf="@+id/mypage_portfolio_tv" />


                <TextView
                    android:id="@+id/mypage_portfolio_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="포트폴리오"
                    android:textColor="@color/bottom_nav_icon"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/mypage_portfolio_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="0"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/mypage_portfolio_tv"
                    app:layout_constraintStart_toStartOf="@+id/mypage_portfolio_tv"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_portfolio_tv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/mypage_session_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="세션"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mypage_info_cl" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mypage_session_cl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_round_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mypage_session_title_tv">

                <ImageView
                    android:id="@+id/mypage_session_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_guitar_temp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mypage_session_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="기타"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/mypage_session_iv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mypage_session_change_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="변경하기"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/resign"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/resign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탈퇴"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mypage_tb_cl"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mypage_session_cl"
                android:background="@drawable/mypage_tab_bg"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/mypage_tb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mypage_tb_cl"
                app:tabBackground="@drawable/tab_underline"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/blue"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/white">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/mypage_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mypage_tb" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.amar.library.ui.StickyScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mypage_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:backgroundTint="@color/blue"
        android:visibility="visible"
        android:src="@drawable/ic_fab_plus"
        app:tint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>