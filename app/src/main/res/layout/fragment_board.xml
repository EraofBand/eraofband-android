<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/board_top_cl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/board_top_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/feed"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/board_top_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_mypage_edit"
            android:padding="5dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/board_top_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/board_top_title_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/board_total_tv"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:gravity="center"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/blue_round_bg2"
        android:paddingVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/board_top_cl"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/board_follow_tv"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/follow"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:gravity="center"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/gray_round_bg"
        android:paddingVertical="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/board_top_cl"
        app:layout_constraintStart_toEndOf="@id/board_total_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/board_feed_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_portfolio_list"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/board_total_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>