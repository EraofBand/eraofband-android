<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ontogether_iv"
        android:layout_width="227dp"
        android:layout_height="281dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/ontogether_music_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이제 음악은"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/ontogether_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ontogether_together_tv"/>

    <TextView
        android:id="@+id/ontogether_together_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 함께 즐겨야지!"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/ontogether_music_tv"
        app:layout_constraintStart_toEndOf="@id/ontogether_music_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onlesson_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다양한 사람들과 포트폴리오를 공유하고 게시판, 채팅을\n통해 자유롭게 소통할 수 있어요"
        android:textColor="@color/light_gray"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ontogether_music_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>