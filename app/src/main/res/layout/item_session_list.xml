<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_round_bg"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/session_list_ing_tv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/recruiting"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAlignment="center"
            android:fontFamily="@font/pretendard_medium"
            app:rippleColor="@color/transparent"
            app:chipBackgroundColor="@color/blue"
            app:chipMinTouchTargetSize="0dp"
            android:paddingVertical="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/session_list_session_tv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:textAlignment="center"
            android:fontFamily="@font/pretendard_medium"
            app:rippleColor="@color/transparent"

            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="@color/bottom_nav"
            app:chipStrokeColor="@color/blue"
            app:chipStrokeWidth="1.5dp"
            android:paddingVertical="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/session_list_ing_tv"
            app:layout_constraintTop_toTopOf="@id/session_list_ing_tv"
            app:layout_constraintBottom_toBottomOf="@id/session_list_ing_tv"/>

        <TextView
            android:id="@+id/session_list_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/session_list_ing_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/session_list_intro_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/session_list_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/session_list_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/session_list_intro_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/session_list_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/tablayout_gray"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/session_list_cnt_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/session_list_share_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/session_list_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/session_list_line2"
            app:layout_constraintBottom_toBottomOf="@id/session_list_line2"/>

        <View
            android:id="@+id/session_list_line2"
            android:layout_width="1.5dp"
            android:layout_height="50dp"
            android:background="@color/tablayout_gray"
            app:layout_constraintTop_toBottomOf="@id/session_list_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/session_list_volunteer_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/volunteer"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/session_list_line2"
            app:layout_constraintStart_toStartOf="@id/session_list_line2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/session_list_line2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>