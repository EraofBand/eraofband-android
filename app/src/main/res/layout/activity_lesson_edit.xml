<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_lesson_edit_actionbar_cl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/home_lesson_edit_back_ib"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_back"
            android:background="@color/transparent"
            android:scaleType="fitCenter"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/home_lesson_edit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레슨 수정"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_lesson_edit_nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_actionbar_cl"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp">

            <TextView
                android:id="@+id/home_lesson_edit_notification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레슨 정보를 수정해주세요"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_lesson_edit_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레슨 종목"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_notification_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/home_lesson_edit_type_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_type_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_lesson_edit_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레슨 이름"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_type_sp"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_lesson_edit_name_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="타이틀"
                android:textColorHint="@color/content"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_name_tv"/>

            <TextView
                android:id="@+id/home_band_edit_name_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="00 / 20"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_lesson_edit_name_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_lesson_edit_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한 줄 소개"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_name_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_lesson_edit_info_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="밴드 한 줄 소개를 작성해주세요."
                android:textColorHint="@color/content"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_info_tv"/>

            <TextView
                android:id="@+id/home_lesson_edit_info_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="00 / 20"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_lesson_edit_info_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_lesson_edit_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 지역"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_info_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/home_lesson_edit_city_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_location_tv"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/home_lesson_edit_area_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginStart="23dp"
                app:layout_constraintTop_toTopOf="@id/home_lesson_edit_city_sp"
                app:layout_constraintStart_toEndOf="@id/home_lesson_edit_city_sp"/>

            <TextView
                android:id="@+id/home_lesson_edit_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모집 인원"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_city_sp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_lesson_edit_cnt_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망하는 인원수를 입력해주세요"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_cnt_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/home_lesson_edit_cnt_v"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gray_round_bg"
                app:layout_constraintTop_toTopOf="@id/home_lesson_edit_cnt_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_lesson_edit_cnt_info_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_lesson_edit_cnt_cl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/home_lesson_edit_cnt_v"
                app:layout_constraintStart_toStartOf="@id/home_lesson_edit_cnt_v"
                app:layout_constraintEnd_toEndOf="@id/home_lesson_edit_cnt_v"
                app:layout_constraintBottom_toBottomOf="@id/home_lesson_edit_cnt_v">


                <ImageButton
                    android:id="@+id/edit_cnt_minus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_minus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/edit_cnt_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/edit_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_cnt_minus_ib"
                    app:layout_constraintEnd_toStartOf="@id/edit_cnt_plus_ib"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/edit_cnt_plus_ib"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_cnt_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_lesson_edit_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대표 사진"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_cnt_info_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/home_lesson_edit_img_v"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/gray_round_bg"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_img_tv"/>

            <ImageView
                android:id="@+id/home_lesson_edit_img_iv"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_add_picture"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="@id/home_lesson_edit_img_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_lesson_edit_add_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 추가하기"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/blue"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_img_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_lesson_edit_add_info_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밴드를 대표하는 사진 한장을 추가해 주세요."
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_add_img_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_lesson_edit_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레슨 소개"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_img_v"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_lesson_edit_detail_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/gray_round_bg"
                android:hint="레슨을 소개해주세요!"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:gravity="top"
                android:maxLength="1000"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_detail_tv"/>

            <TextView
                android:id="@+id/home_lesson_edit_detail_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="00 / 500"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_lesson_edit_detail_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_lesson_edit_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅방 링크"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_detail_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_lesson_edit_chat_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:hint="채팅방 링크를 등록해주세요"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="40"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_chat_tv"/>

            <TextView
                android:id="@+id/home_lesson_edit_register_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="등록하기"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:background="@drawable/blue_round_bg"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@id/home_lesson_edit_chat_et"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>