<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.home.session.HomeSessionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_cl_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/home_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="나와 함께할 밴드 찾아보기"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_detail_iv"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_home_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/home_detail_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/home_detail_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_cl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_cl_1">

        <ImageView
            android:id="@+id/home_session_vocal_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home_session"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_session_vocal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="보컬"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/home_session_vocal_iv"
            app:layout_constraintStart_toStartOf="@id/home_session_vocal_iv"
            app:layout_constraintTop_toBottomOf="@id/home_session_vocal_iv" />

        <ImageView
            android:id="@+id/home_session_guitar_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home_session"
            app:layout_constraintEnd_toStartOf="@+id/home_session_base_iv"
            app:layout_constraintStart_toEndOf="@id/home_session_vocal_iv"
            app:layout_constraintTop_toTopOf="@id/home_session_vocal_iv" />

        <TextView
            android:id="@+id/home_session_guitar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="기타"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/home_session_guitar_iv"
            app:layout_constraintStart_toStartOf="@id/home_session_guitar_iv"
            app:layout_constraintTop_toBottomOf="@id/home_session_guitar_iv" />

        <ImageView
            android:id="@+id/home_session_base_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home_session"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_session_guitar_iv" />

        <TextView
            android:id="@+id/home_session_base_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="베이스"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/home_session_base_iv"
            app:layout_constraintStart_toStartOf="@id/home_session_base_iv"
            app:layout_constraintTop_toBottomOf="@id/home_session_base_iv" />

        <ImageView
            android:id="@+id/home_session_keyboard_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home_session"
            app:layout_constraintEnd_toStartOf="@+id/home_session_drum_iv"
            app:layout_constraintStart_toEndOf="@+id/home_session_base_iv"
            app:layout_constraintTop_toTopOf="@id/home_session_base_iv" />

        <TextView
            android:id="@+id/home_session_keyboard_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="키보드"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/home_session_keyboard_iv"
            app:layout_constraintStart_toStartOf="@id/home_session_keyboard_iv"
            app:layout_constraintTop_toBottomOf="@id/home_session_keyboard_iv" />

        <ImageView
            android:id="@+id/home_session_drum_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home_session"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_session_keyboard_iv" />

        <TextView
            android:id="@+id/home_session_drum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="드럼"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/home_session_drum_iv"
            app:layout_constraintStart_toStartOf="@id/home_session_drum_iv"
            app:layout_constraintTop_toBottomOf="@id/home_session_drum_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/home_new_band_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="새롭게 결성되었어요!"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_cl_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_new_band_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_new_band_tv"
        tools:listitem="@layout/item_session_new_band" />

    <TextView
        android:id="@+id/home_popular_band_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="인기 있는 밴드"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_new_band_rv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_band_popular_first_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_popular_band_tv">

        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="1"
            android:textColor="@color/blue"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_popular_band_first_profile_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/round_comment_bg"
            app:layout_constraintBottom_toBottomOf="@+id/first"
            app:layout_constraintStart_toEndOf="@+id/first"
            app:layout_constraintTop_toTopOf="@+id/first" />

        <TextView
            android:id="@+id/home_popular_band_first_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="인기 순위 1등 밴드"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/home_popular_band_first_profile_iv"
            app:layout_constraintTop_toTopOf="@+id/home_popular_band_first_profile_iv" />

        <TextView
            android:id="@+id/home_popular_band_first_introduction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="1등 밴드 한 줄 소개"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_popular_band_first_profile_iv"
            app:layout_constraintStart_toStartOf="@+id/home_popular_band_first_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_band_first_title_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_band_popular_second_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/home_band_popular_first_cl"
        app:layout_constraintTop_toBottomOf="@+id/home_band_popular_first_cl">

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="2"
            android:textColor="@color/blue"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_popular_band_second_profile_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/round_comment_bg"
            app:layout_constraintBottom_toBottomOf="@+id/second"
            app:layout_constraintStart_toEndOf="@+id/second"
            app:layout_constraintTop_toTopOf="@+id/second" />

        <TextView
            android:id="@+id/home_popular_band_second_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="인기 순위 2등 밴드"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/home_popular_band_second_profile_iv"
            app:layout_constraintTop_toTopOf="@+id/home_popular_band_second_profile_iv" />

        <TextView
            android:id="@+id/home_popular_band_second_introduction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="2등 밴드 한 줄 소개"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_popular_band_second_profile_iv"
            app:layout_constraintStart_toStartOf="@+id/home_popular_band_second_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_band_second_title_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_band_popular_third_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/home_band_popular_second_cl"
        app:layout_constraintTop_toBottomOf="@+id/home_band_popular_second_cl">

        <TextView
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="3"
            android:textColor="@color/blue"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_popular_band_third_profile_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"

            android:src="@drawable/round_comment_bg"
            app:layout_constraintBottom_toBottomOf="@+id/third"
            app:layout_constraintStart_toEndOf="@+id/third"
            app:layout_constraintTop_toTopOf="@+id/third" />

        <TextView
            android:id="@+id/home_popular_band_third_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="인기 순위 3등 밴드"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/home_popular_band_third_profile_iv"
            app:layout_constraintTop_toTopOf="@+id/home_popular_band_third_profile_iv" />

        <TextView
            android:id="@+id/home_popular_band_third_introduction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="3등 밴드 한 줄 소개"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_popular_band_third_profile_iv"
            app:layout_constraintStart_toStartOf="@+id/home_popular_band_third_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_popular_band_third_title_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/home_band_popular_third_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>