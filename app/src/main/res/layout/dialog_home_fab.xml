<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_round_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_fab_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_fab_band_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_band_make"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_fab_band_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_band"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/home_fab_band_iv"
            app:layout_constraintStart_toEndOf="@id/home_fab_band_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_fab_band_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/home_fab_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2D313D"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_fab_band"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_fab_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toBottomOf="@id/home_fab_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_fab_lesson_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_lesson_make"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_fab_lesson_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_lesson"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/home_fab_lesson_iv"
            app:layout_constraintStart_toEndOf="@id/home_fab_lesson_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_fab_lesson_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>