<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/onboarding_skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKIP"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_skip_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_indicator1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/indicator_circle_nonselected1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/onboarding_vp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/onboarding_indicator2_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_indicator2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/indicator_circle_nonselected2"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_vp"
        app:layout_constraintStart_toEndOf="@id/onboarding_indicator1_iv"
        app:layout_constraintEnd_toStartOf="@id/onboarding_indicator3_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_indicator3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/indicator_circle_nonselected2"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_vp"
        app:layout_constraintStart_toEndOf="@id/onboarding_indicator2_iv"
        app:layout_constraintEnd_toStartOf="@id/onboarding_indicator4_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_indicator4_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/indicator_circle_nonselected2"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_vp"
        app:layout_constraintStart_toEndOf="@id/onboarding_indicator3_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>