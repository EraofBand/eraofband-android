<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:layout_marginHorizontal="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/student_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_basic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/student_info_ly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/student_profile_iv"
        app:layout_constraintStart_toEndOf="@id/student_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/student_profile_iv">

        <TextView
            android:id="@+id/student_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해리"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/student_intro_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나는 해리다"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

    <com.google.android.material.chip.Chip
        android:id="@+id/student_session_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/drum"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard_medium"
        app:chipBackgroundColor="@color/blue"
        android:clickable="false"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="@id/student_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/student_profile_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>
