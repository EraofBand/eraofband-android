<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/signup_nickname_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_back"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/signup_nickname_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_nickname_back_iv">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_signup_progress_selected"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_signup_progress"
            android:layout_marginStart="7dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_signup_progress"
            android:layout_marginStart="7dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_signup_progress"
            android:layout_marginStart="7dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_signup_progress"
            android:layout_marginStart="7dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_signup_progress"
            android:layout_marginStart="7dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/signup_nickname_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이승희"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:fontFamily="@font/pretendard_regular"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/signup_nickname_progress"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/signup_nickname_progress"
        app:layout_constraintStart_toEndOf="@id/signup_nickname_name_tv"/>

    <TextView
        android:id="@+id/signup_nickname_welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="밴드의 시대에 오신 것을\n진심으로 환영합니다 :)"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_nickname_name_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/signup_nickname_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필을 입력하고 제대로 즐겨보아요!"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_nickname_welcome_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/signup_nickname_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/signup_nickname_start_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/signup_nickname_nickname_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="@color/gray"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="20dp"
        android:maxLength="8"
        app:layout_constraintTop_toBottomOf="@id/signup_nickname_nickname_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/signup_nickname_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textSize="17sp"
        android:fontFamily="@font/pretendard_regular"
        android:background="@drawable/blue_round_bg"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>