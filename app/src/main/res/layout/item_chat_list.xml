<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:id="@+id/item_chat_list_rv">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chat_list_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_round_bg"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/chat_list_nickname_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="@id/chat_list_profile_iv"
        app:layout_constraintStart_toEndOf="@id/chat_list_profile_iv"
        app:layout_constraintEnd_toStartOf="@id/chat_list_time_tv"/>

    <TextView
        android:id="@+id/chat_list_message_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toBottomOf="@id/chat_list_nickname_tv"
        app:layout_constraintStart_toEndOf="@id/chat_list_profile_iv"
        app:layout_constraintEnd_toStartOf="@id/chat_list_time_tv"/>

    <TextView
        android:id="@+id/chat_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:text=""
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/light_gray"
        android:textSize="10sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/chat_list_nickname_tv"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>