<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_band_make_actionbar_cl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_band_make_back_ib"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_back"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/home_band_make_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_band"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_band_make_nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_band_make_actionbar_cl"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp">

            <TextView
                android:id="@+id/home_band_make_notification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band_make_subtitle"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_band_make_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band_title"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_notification_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_make_name_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:inputType="text"
                android:hint="@string/name"
                android:textColorHint="@color/content"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="20"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_name_tv"/>

            <TextView
                android:id="@+id/home_band_make_name_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text=""
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_band_make_name_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_band_make_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lesson_intro_one"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_name_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_make_info_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:inputType="text"
                android:hint="@string/band_one_intro_info"
                android:textColorHint="@color/content"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="20"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_info_tv"/>

            <TextView
                android:id="@+id/home_band_make_info_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text=""
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_band_make_info_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_band_make_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_area"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_info_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/home_band_make_city_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_location_tv"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/home_band_make_area_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginStart="23dp"
                app:layout_constraintTop_toTopOf="@id/home_band_make_city_sp"
                app:layout_constraintStart_toEndOf="@id/home_band_make_city_sp"/>

            <TextView
                android:id="@+id/home_band_make_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_photo"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_area_sp"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_band_make_img_v"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/gray_round_bg"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_img_tv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_band_make_img_iv"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_add_picture"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="@id/home_band_make_img_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_band_make_add_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lesson_add_photo"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/blue"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_img_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_band_make_add_info_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band_add_photo_info"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_add_img_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/home_band_make_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band_intro"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_img_v"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_make_detail_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/gray_round_bg"
                android:inputType="text"
                android:hint="@string/band_intro_info"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:gravity="top"
                android:maxLength="500"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_detail_tv"/>

            <TextView
                android:id="@+id/home_band_make_detail_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text=""
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@id/home_band_make_detail_et"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_band_make_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_link"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_detail_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_make_chat_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:inputType="text"
                android:hint="@string/add_chat_link"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="80"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_chat_tv"/>

            <View
                android:id="@+id/home_band_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tablayout_gray"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@+id/home_band_make_chat_et"/>

            <TextView
                android:id="@+id/home_band_make_session_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band_session_num_info"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_line"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_band_make_except_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band_session_num_sub_info"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="12sp"
                android:textColor="#BBBBBB"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_session_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_band_make_vocal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vocal"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_except_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_make_vocal_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:inputType="text"
                android:hint="@string/band_make_session_info"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="20"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_vocal_tv"/>

            <View
                android:id="@+id/home_band_make_vocal_cnt_v"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gray_round_bg"
                app:layout_constraintTop_toTopOf="@id/home_band_make_vocal_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_band_make_vocal_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_band_make_vocal_cl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/home_band_make_vocal_cnt_v"
                app:layout_constraintStart_toStartOf="@id/home_band_make_vocal_cnt_v"
                app:layout_constraintEnd_toEndOf="@id/home_band_make_vocal_cnt_v"
                app:layout_constraintBottom_toBottomOf="@id/home_band_make_vocal_cnt_v">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/make_vocal_minus_ib"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_minus"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/make_vocal_cnt_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/make_vocal_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/make_vocal_minus_ib"
                    app:layout_constraintEnd_toStartOf="@id/make_vocal_plus_ib"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/make_vocal_plus_ib"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/make_vocal_cnt_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_band_make_guitar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guitar"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_vocal_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_make_guitar_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:inputType="text"
                android:hint="@string/band_make_session_info"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="20"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_guitar_tv"/>

            <View
                android:id="@+id/home_band_make_guitar_cnt_v"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gray_round_bg"
                app:layout_constraintTop_toTopOf="@id/home_band_make_guitar_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_band_make_guitar_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_band_make_guitar_cl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/home_band_make_guitar_cnt_v"
                app:layout_constraintStart_toStartOf="@id/home_band_make_guitar_cnt_v"
                app:layout_constraintEnd_toEndOf="@id/home_band_make_guitar_cnt_v"
                app:layout_constraintBottom_toBottomOf="@id/home_band_make_guitar_cnt_v">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/make_guitar_minus_ib"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_minus"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/make_guitar_cnt_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/make_guitar_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/make_guitar_minus_ib"
                    app:layout_constraintEnd_toStartOf="@id/make_guitar_plus_ib"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/make_guitar_plus_ib"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/make_guitar_cnt_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_band_make_base_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/base"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_guitar_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/home_band_make_base_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/gray_round_bg"
                android:inputType="text"
                android:hint="@string/band_make_session_info"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:maxLength="20"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_band_make_base_tv"/>

            <View
                android:id="@+id/home_band_make_base_cnt_v"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gray_round_bg"
                app:layout_constraintTop_toTopOf="@id/home_band_make_base_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/home_band_make_base_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_band_make_base_cl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/home_band_make_base_cnt_v"
                app:layout_constraintStart_toStartOf="@id/home_band_make_base_cnt_v"
                app:layout_constraintEnd_toEndOf="@id/home_band_make_base_cnt_v"
                app:layout_constraintBottom_toBottomOf="@id/home_band_make_base_cnt_v">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/make_base_minus_ib"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_minus"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/make_base_cnt_tv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/make_base_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/make_base_minus_ib"
                    app:layout_constraintEnd_toStartOf="@id/make_base_plus_ib"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/make_base_plus_ib"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_plus"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/make_base_cnt_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_band_make_keyboard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
