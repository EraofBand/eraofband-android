<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_board_title_image_iv"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:paddingEnd="5dp"
        android:src="@drawable/ic_board_question"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_board_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_board_title_tv"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/item_board_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text=""
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@+id/item_board_title_image_iv"
        app:layout_constraintEnd_toStartOf="@id/item_board_image_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_board_intro_tv"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_board_image_iv"
        app:layout_constraintStart_toStartOf="@+id/item_board_title_image_iv" />

    <TextView
        android:id="@+id/item_board_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/pretendard_medium"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_board_intro_tv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_board_image_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/medium_gray_round_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_board_title_tv" />

    <TextView
        android:id="@+id/item_board_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_board_info_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_board_info_tv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_board_comment_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_board_comment"
        app:layout_constraintBottom_toBottomOf="@+id/item_board_info_tv"
        app:layout_constraintEnd_toStartOf="@+id/item_board_comment_tv"
        app:layout_constraintTop_toTopOf="@+id/item_board_info_tv" />

    <TextView
        android:id="@+id/item_board_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text=""
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_board_info_tv"
        app:layout_constraintEnd_toStartOf="@+id/item_board_comment_iv"
        app:layout_constraintTop_toTopOf="@+id/item_board_info_tv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_board_like_iv"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_board_like"
        app:layout_constraintBottom_toBottomOf="@+id/item_board_info_tv"
        app:layout_constraintEnd_toStartOf="@+id/item_board_like_tv"
        app:layout_constraintTop_toTopOf="@+id/item_board_info_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/tablayout_gray"
        app:layout_constraintTop_toBottomOf="@id/item_board_info_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>