<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/band_recruit_info_calender_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calender"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_show_or_not_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_or_not"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/band_recruit_info_calender_iv"
            app:layout_constraintTop_toTopOf="@id/band_recruit_info_calender_iv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_calender_iv"/>

        <TextView
            android:id="@+id/band_recruit_info_show_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확정"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/band_recruit_info_show_or_not_tv"
            app:layout_constraintStart_toEndOf="@id/band_recruit_info_show_or_not_tv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_show_or_not_tv"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/band_recruit_info_location_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_calender_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_activity_area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_or_not"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/band_recruit_info_location_iv"
            app:layout_constraintTop_toTopOf="@id/band_recruit_info_location_iv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_location_iv"/>

        <TextView
            android:id="@+id/band_recruit_info_area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 강서구"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/band_recruit_info_activity_area_tv"
            app:layout_constraintStart_toEndOf="@id/band_recruit_info_activity_area_tv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_activity_area_tv"/>

        <View
            android:id="@+id/band_recruit_info_line1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/tablayout_gray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_location_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_leader_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leader_info"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_line1"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/band_recruit_info_leader_profile_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_captain"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_leader_info_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/band_recruit_info_star_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star"
            android:layout_marginEnd="-5dp"
            android:layout_marginBottom="-5dp"
            app:layout_constraintEnd_toEndOf="@id/band_recruit_info_leader_profile_iv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_leader_profile_iv"/>

        <LinearLayout
            android:id="@+id/band_recruit_info_leader_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="@id/band_recruit_info_leader_profile_iv"
            app:layout_constraintStart_toEndOf="@id/band_recruit_info_leader_profile_iv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_leader_profile_iv">

            <TextView
                android:id="@+id/band_recruit_info_leader_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="승희는 해리야"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나는 대장입니다"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <View
            android:id="@+id/band_recruit_info_line2"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/tablayout_gray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_leader_profile_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_band_intro_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/band_intro"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_line2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_band_intro_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="안녕하세요 우리는 최강밴드 밴드밴드밴드 뭐 아무튼 그렇습니다"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_band_intro_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/band_recruit_info_line3"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/tablayout_gray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_band_intro_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_member_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_line3"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/band_recruit_info_member_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_member_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/band_recruit_info_line4"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/tablayout_gray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="05dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_member_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_show_schedule_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_date"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_line4"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/band_recruit_info_show_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_round_bg"
            android:padding="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_show_schedule_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/band_recruit_info_show_left_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="D-2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_medium"
                android:paddingVertical="5dp"
                android:clickable="false"
                app:chipBackgroundColor="@color/blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/band_recruit_info_show_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이식스 정기공연"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="@id/band_recruit_info_show_left_tv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_show_left_tv"
                app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_show_left_tv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/band_recruit_info_show_calender_iv"
                android:layout_width="17.5dp"
                android:layout_height="17.5dp"
                android:src="@drawable/ic_calender_check"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/band_recruit_info_show_left_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/band_recruit_info_show_calender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.12.10"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="@id/band_recruit_info_show_calender_iv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_show_calender_iv"
                app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_show_calender_iv"/>

            <View
                android:id="@+id/band_recruit_info_line5"
                android:layout_width="1.5dp"
                android:layout_height="0dp"
                android:background="@color/gray"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/band_recruit_info_show_calender_tv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_show_calender_tv"
                app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_show_calender_tv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/band_recruit_info_show_time_iv"
                android:layout_width="17.5dp"
                android:layout_height="17.5dp"
                android:src="@drawable/ic_time"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/band_recruit_info_show_left_tv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_line5"/>

            <TextView
                android:id="@+id/band_recruit_info_show_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:00"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="@id/band_recruit_info_show_time_iv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_show_time_iv"
                app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_show_time_iv"/>

            <View
                android:id="@+id/band_recruit_info_line6"
                android:layout_width="1.5dp"
                android:layout_height="0dp"
                android:background="@color/gray"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/band_recruit_info_show_time_tv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_show_time_tv"
                app:layout_constraintBottom_toBottomOf="@id/band_recruit_info_show_time_tv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/band_recruit_info_show_location_iv"
                android:layout_width="17.5dp"
                android:layout_height="17.5dp"
                android:src="@drawable/ic_location"
                android:tint="@color/gray"
                android:layout_marginTop="15dp"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/band_recruit_info_show_left_tv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_line6"/>

            <TextView
                android:id="@+id/band_recruit_info_show_location_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="서교동 360-18 지하 1층 001클럽"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:lineSpacingExtra="7dp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/band_recruit_info_show_location_iv"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_show_location_iv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/band_info_show_ticket_iv"
                android:layout_width="17.5dp"
                android:layout_height="17.5dp"
                android:src="@drawable/ic_ticket"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/band_recruit_info_show_calender_iv"
                app:layout_constraintStart_toStartOf="@id/band_recruit_info_show_calender_iv"/>

            <TextView
                android:id="@+id/band_info_show_ticket_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="@id/band_info_show_ticket_iv"
                app:layout_constraintStart_toEndOf="@id/band_info_show_ticket_iv"
                app:layout_constraintBottom_toBottomOf="@id/band_info_show_ticket_iv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/band_recruit_info_line7"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/tablayout_gray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_show_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_info_chat_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_link"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_line7"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/band_recruit_info_chat_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:background="@drawable/gray_round_bg"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_info_chat_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/band_recruit_info_chat_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chat"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/band_recruit_info_chat_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="https://www.naver.com"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toEndOf="@id/band_recruit_info_chat_iv"
                app:layout_constraintTop_toTopOf="@id/band_recruit_info_chat_iv"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>