<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/following_search_v"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/gray_round_bg"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/following_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/following_search_v"
        app:layout_constraintStart_toStartOf="@id/following_search_v"
        app:layout_constraintBottom_toBottomOf="@id/following_search_v"/>

    <EditText
        android:id="@+id/following_search_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/pretendard_regular"
        android:hint="@string/search_following_hint"
        android:inputType="text"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:maxLines="1"
        android:textSize="18sp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@id/following_search_v"
        app:layout_constraintEnd_toEndOf="@+id/following_search_v"
        app:layout_constraintStart_toEndOf="@id/following_search_iv"
        app:layout_constraintTop_toTopOf="@id/following_search_v" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/following_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/following_search_v"
        tools:listitem="@layout/item_follow" />

</androidx.constraintlayout.widget.ConstraintLayout>