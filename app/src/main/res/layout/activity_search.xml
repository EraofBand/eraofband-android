<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_searchbar_cl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/search_back_ib"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_back"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/search_bar_v"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gray_round_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_back_ib"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/search_bar_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/search_bar_v"
            app:layout_constraintStart_toStartOf="@id/search_bar_v"
            app:layout_constraintBottom_toBottomOf="@id/search_bar_v"/>

        <EditText
            android:id="@+id/search_bar_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@null"
            android:maxLines="1"
            android:hint="검색어를 입력해주세요"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="15sp"
            android:textColorHint="@color/content"
            android:textColor="@color/content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/search_bar_v"
            app:layout_constraintStart_toEndOf="@id/search_bar_iv"
            app:layout_constraintEnd_toEndOf="@id/search_bar_v"
            app:layout_constraintBottom_toBottomOf="@id/search_bar_v"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/search_tb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabBackground="@drawable/tab_layout_bg"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextAppearance="@style/tab_text"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/blue"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorFullWidth="false"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_searchbar_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/search_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>