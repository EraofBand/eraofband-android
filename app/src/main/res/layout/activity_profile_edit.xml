<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_edit_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profile_edit_back_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:adjustViewBounds="true"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/profile_edit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_edit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toTopOf="@id/profile_edit_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/profile_edit_back_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_edit_profile_iv"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_captain"
                android:layout_marginTop="55dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_edit_camera_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_camera"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toEndOf="@id/profile_edit_profile_iv"
                app:layout_constraintBottom_toBottomOf="@id/profile_edit_profile_iv"/>

            <TextView
                android:id="@+id/profile_edit_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nickname"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_profile_iv"/>

            <EditText
                android:id="@+id/profile_edit_nickname_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:inputType="text"
                android:hint="@null"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:paddingVertical="15sp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_nickname_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/profile_edit_introduce_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_introduce"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_nickname_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_edit_introduce_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 50"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/profile_edit_introduce_et"/>

            <EditText
                android:id="@+id/profile_edit_introduce_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@null"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:maxLength="100"
                android:lineSpacingExtra="5dp"
                android:background="@drawable/medium_gray_round_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_introduce_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/profile_edit_gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_introduce_et"
                app:layout_constraintStart_toStartOf="parent"/>

            <RadioGroup
                android:id="@+id/profile_edit_gender_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_gender_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/profile_edit_man_rb"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/check_selector"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile_edit_woman_rb"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/check_selector"
                    android:button="@null"
                    android:layout_marginStart="90dp"/>

            </RadioGroup>

            <TextView
                android:id="@+id/profile_edit_man_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/man"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@id/profile_edit_gender_rg"
                app:layout_constraintStart_toStartOf="@id/profile_edit_gender_rg"
                app:layout_constraintBottom_toBottomOf="@id/profile_edit_gender_rg"/>

            <TextView
                android:id="@+id/profile_edit_woman_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/woman"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginStart="155dp"
                app:layout_constraintTop_toTopOf="@id/profile_edit_gender_rg"
                app:layout_constraintStart_toStartOf="@id/profile_edit_gender_rg"
                app:layout_constraintBottom_toBottomOf="@id/profile_edit_gender_rg"/>

            <TextView
                android:id="@+id/profile_edit_birthday_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_man_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_edit_real_birthday_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_stroke_round_bg"
                android:text="2001-12-10"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_birthday_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/profile_edit_region_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/region"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_real_birthday_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/profile_edit_city_sp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_region_tv"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/profile_edit_area_sp"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:popupBackground="@color/background"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_region_tv"
                app:layout_constraintStart_toEndOf="@id/profile_edit_city_sp"/>

            <Button
                android:id="@+id/signup_save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textSize="17sp"
                android:fontFamily="@font/pretendard_regular"
                android:background="@drawable/blue_round_bg"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_city_sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>