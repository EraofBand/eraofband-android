<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="35dp"
    android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/band_recruit_session_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/band_recruit_session_volunteer_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volunteer_list"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/band_recruit_session_volunteer_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/band_recruit_session_volunteer_list_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/band_recruit_session_volunteer_list_tv"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/band_recruit_session_volunteer_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/band_recruit_session_volunteer_list_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/band_recruit_session_no_volunteer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_volunteer"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_bold"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/band_recruit_session_volunteer_list_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/band_recruit_session_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tablayout_gray"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/band_recruit_session_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_session_list"
            android:layout_marginTop="25dp"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_session_volunteer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>