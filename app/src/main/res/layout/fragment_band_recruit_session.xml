<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp">

        <TextView
            android:id="@+id/band_recruit_session_volunteer_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volunteer_list"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_session_volunteer_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/band_recruit_session_volunteer_list_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_session_volunteer_list_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/band_recruit_session_volunteer_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_session_volunteer_list_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/band_recruit_session_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/tablayout_gray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_session_volunteer_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/band_recruit_session_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_session_list"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_session_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>