<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onlesson_iv"
        android:layout_width="227dp"
        android:layout_height="281dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onlesson_lesson_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레슨 정보"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/onlesson_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/onlesson_fast_tv"/>

    <TextView
        android:id="@+id/onlesson_fast_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도 빠르게!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/onlesson_lesson_tv"
        app:layout_constraintStart_toEndOf="@id/onlesson_lesson_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onlesson_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="복잡하고 알기 어려웠던 주변의 악기, 보컬 레슨에\n대한 정보를 한눈에 확인할 수 있어요"
        android:textColor="@color/light_gray"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/onlesson_lesson_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>