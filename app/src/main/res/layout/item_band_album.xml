<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/band_album_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/band_album_picture_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/medium_gray_round_bg"
        android:clipToOutline="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toBottomOf="@id/band_album_title_tv"/>

    <TextView
        android:id="@+id/band_album_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/band_album_picture_iv"
        app:layout_constraintEnd_toEndOf="@id/band_album_picture_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>