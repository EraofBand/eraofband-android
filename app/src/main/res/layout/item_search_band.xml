<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_band_cl"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_band_img_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/band_profile"
            android:background="@drawable/medium_gray_round_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/search_band_region_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강남구"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/search_band_img_iv"
                app:layout_constraintStart_toEndOf="@id/search_band_img_iv"/>

            <TextView
                android:id="@+id/search_band_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="데이식스 커버 동아리 드럼 모집"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/search_band_region_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/search_band_region_tv"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/search_band_member_iv"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_member"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/search_band_name_tv"
                    app:layout_constraintStart_toStartOf="@id/search_band_region_tv"/>

                <TextView
                    android:id="@+id/search_band_member_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 / 5"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="-4dp"
                    app:layout_constraintStart_toEndOf="@id/search_band_member_iv"
                    app:layout_constraintBottom_toBottomOf="@id/search_band_member_iv"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tablayout_gray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_band_img_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>