<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/comment_profile_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_captain"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/comment_nickname_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="@font/pretendard_medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@id/comment_profile_iv"
        app:layout_constraintTop_toTopOf="@id/comment_profile_iv"
        app:layout_constraintEnd_toStartOf="@id/comment_more_iv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/comment_more_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_list"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/comment_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/comment_profile_iv"/>

    <TextView
        android:id="@+id/comment_comment_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="@string/comment"
        android:textColor="@color/content"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/comment_nickname_tv"
        app:layout_constraintTop_toBottomOf="@+id/comment_nickname_tv" />

    <TextView
        android:id="@+id/comment_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16시간"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/comment_comment_tv"
        app:layout_constraintStart_toStartOf="@id/comment_nickname_tv"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/tablayout_gray"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/comment_time_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>