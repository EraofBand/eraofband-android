<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onportfolio_iv"
        android:layout_width="227dp"
        android:layout_height="281dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onportfolio_portfolio_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만의 음악 포트폴리오"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/onportfolio_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/onportfolio_make_tv"/>

    <TextView
        android:id="@+id/onportfolio_make_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 만들기"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/onportfolio_portfolio_tv"
        app:layout_constraintStart_toEndOf="@id/onportfolio_portfolio_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/onportfolio_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="열심히 연습한 곡들을 나만의 음악 포트폴리오에\n추가해 모두에게 내 실력을 뽐낼 수 있어요"
        android:textColor="@color/light_gray"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/onportfolio_portfolio_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>