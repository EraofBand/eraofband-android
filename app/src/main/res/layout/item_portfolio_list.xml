<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/portfolio_list_profile_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/profile_round_bg"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/portfolio_list_nickname_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/portfolio_list_profile_iv"
        app:layout_constraintStart_toEndOf="@id/portfolio_list_profile_iv"
        app:layout_constraintEnd_toStartOf="@id/portfolio_list_list_iv"
        app:layout_constraintBottom_toBottomOf="@id/portfolio_list_profile_iv"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/portfolio_list_list_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_list"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/portfolio_list_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/portfolio_list_profile_iv"/>

    <FrameLayout
        android:id="@+id/portfolio_list_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_video_bg"
        android:outlineProvider="background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_list_profile_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/portfolio_list_video_pv"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:auto_show="false"
            app:resize_mode="fixed_width"
            app:show_buffering="always"
            app:use_controller="true" />

    </FrameLayout>

    <TextView
        android:id="@+id/portfolio_list_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_list_video"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/portfolio_list_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_list_date_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/portfolio_list_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/content"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_list_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/portfolio_list_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_list_content_tv"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/portfolio_list_like_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_heart_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/portfolio_list_like_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/content"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/portfolio_list_like_iv"
            app:layout_constraintBottom_toBottomOf="@id/portfolio_list_like_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/portfolio_list_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/portfolio_list_like"
        app:layout_constraintTop_toTopOf="@id/portfolio_list_like"
        app:layout_constraintBottom_toBottomOf="@id/portfolio_list_like">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/portfolio_list_comment_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_comment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/portfolio_list_comment_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/content"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/portfolio_list_comment_iv"
            app:layout_constraintStart_toEndOf="@id/portfolio_list_comment_iv"
            app:layout_constraintBottom_toBottomOf="@id/portfolio_list_comment_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/porfolio_list_share_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_share"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/portfolio_list_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/portfolio_list_like"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#333333"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_list_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>