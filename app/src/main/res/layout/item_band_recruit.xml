<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/medium_gray_round_bg"
        android:backgroundTint="@color/bottom_nav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/band_recruit_img_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/band_profile"
            android:background="@drawable/medium_gray_round_bg"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_region_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강남구"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/band_recruit_img_iv"
            app:layout_constraintTop_toTopOf="@id/band_recruit_img_iv"/>

        <TextView
            android:id="@+id/band_recruit_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="데이식스 커버 동아리 드럼 모집"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_region_tv"
            app:layout_constraintStart_toStartOf="@id/band_recruit_region_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/band_recruit_introduce_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="우리와 함께 행복한 밴드 생활을 즐길 드럼을 모집합니다 진짜 재밌을 예정"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/band_recruit_title_tv"
            app:layout_constraintStart_toStartOf="@id/band_recruit_region_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/band_recruit_member_iv"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_member"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/band_recruit_region_tv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_img_iv"/>

        <TextView
            android:id="@+id/band_recuit_member_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/5"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/band_recruit_member_iv"
            app:layout_constraintStart_toEndOf="@id/band_recruit_member_iv"
            app:layout_constraintBottom_toBottomOf="@id/band_recruit_member_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>