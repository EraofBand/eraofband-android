<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_round_bg">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/band_fab_band_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_band_make"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/band_fab_make_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_band"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/band_fab_band_iv"
            app:layout_constraintStart_toEndOf="@id/band_fab_band_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/band_fab_band_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>