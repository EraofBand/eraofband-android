        <activity
            android:name="com.example.eraofband.ui.main.mypage.ProfileEditActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.main.mypage.MyPageSettingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.main.mypage.MyPageSessionActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.main.mypage.portfolio.PortfolioMakeActivity"
