<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.eraofband">
    <!-- 인터넷 사용 권한 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 외부 저장소 접근 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.eraofband.ui.login.GlobalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EraofBand"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- 카카오 로그인 AuthCodeHandler -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="@string/kakao_native_key" />
            </intent-filter>
        </activity>

        <!-- FCM -->
        <service
            android:name="com.example.eraofband.ui.login.MyFirebaseInstanceIDService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name="com.example.eraofband.ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.eraofband.ui.onboarding.OnboardingActivity"
            android:exported="true" />
        <activity
            android:name="com.example.eraofband.ui.signup.SignUpNicknameActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.signup.SignUpGenderActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.signup.SignUpProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.signup.SignUpLocationActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.signup.SignUpSessionActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.signup.SignUpTermActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.main.home.session.band.BandListActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.main.home.session.band.BandRecruitActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eraofband.ui.main.home.lesson.LessonInfoActivity"
            android:exported="false" />
        <activity
